DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir	= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

PREF_JS_EXPORTS = $(srcdir)/profile/bluegriffon-prefs.js \
		  $(NULL)

# hardcoded en-US for the moment
