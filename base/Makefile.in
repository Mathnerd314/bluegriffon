DEPTH    = ../..
topsrcdir  = @top_srcdir@
srcdir  = @srcdir@
VPATH    = @srcdir@

include $(DEPTH)/config/autoconf.mk

APP_VERSION = $(shell cat $(srcdir)/../config/version.txt)
CODE_NAME = $(shell cat $(srcdir)/../config/codename.txt)

DEFINES += \
	-DAPP_NAME=$(MOZ_APP_DISPLAYNAME) \
	-DAPP_VERSION=$(APP_VERSION) \
	-DCODE_NAME=$(CODE_NAME) \
	$(NULL)

ifneq (,$(filter mac cocoa, $(MOZ_WIDGET_TOOLKIT)))
DEFINES += -DTOOLBAR_CUSTOMIZATION_SHEET
endif

_FILES = \
	$(srcdir)/res/bespin.html \
	$(srcdir)/res/scripteditor.html \
	$(srcdir)/res/html_transitional.html \
	$(srcdir)/res/html_strict.html \
	$(srcdir)/res/xhtml_transitional.xhtml \
	$(srcdir)/res/xhtml_strict.xhtml \
	$(srcdir)/res/html5.html \
	$(srcdir)/res/xhtml5.xhtml \
	$(srcdir)/res/rotatorCenterBG.png \
	$(srcdir)/res/rotate_icon.png \
	$(srcdir)/res/reset-fonts-grids.css \
	$(srcdir)/res/base-min.css \
	$(NULL)

_ACE_RESOURCE_FILES = \
	$(srcdir)/res/ace/ace-uncompressed.js \
	$(srcdir)/res/ace/cockpit-uncompressed.js \
	$(srcdir)/res/ace/keybinding-emacs.js \
	$(srcdir)/res/ace/keybinding-vim.js \
	$(srcdir)/res/ace/mode-c_cpp.js \
	$(srcdir)/res/ace/mode-clojure.js \
	$(srcdir)/res/ace/mode-coffee.js \
	$(srcdir)/res/ace/mode-csharp.js \
	$(srcdir)/res/ace/mode-css.js \
	$(srcdir)/res/ace/mode-html.js \
	$(srcdir)/res/ace/mode-java.js \
	$(srcdir)/res/ace/mode-javascript.js \
	$(srcdir)/res/ace/mode-json.js \
	$(srcdir)/res/ace/mode-perl.js \
	$(srcdir)/res/ace/mode-php.js \
	$(srcdir)/res/ace/mode-python.js \
	$(srcdir)/res/ace/mode-ruby.js \
	$(srcdir)/res/ace/mode-scss.js \
	$(srcdir)/res/ace/mode-svg.js \
	$(srcdir)/res/ace/mode-xml.js \
	$(srcdir)/res/ace/theme-clouds.js \
	$(srcdir)/res/ace/theme-clouds_midnight.js \
	$(srcdir)/res/ace/theme-cobalt.js \
	$(srcdir)/res/ace/theme-crimson_editor.js \
	$(srcdir)/res/ace/theme-dawn.js \
	$(srcdir)/res/ace/theme-eclipse.js \
	$(srcdir)/res/ace/theme-idle_fingers.js \
	$(srcdir)/res/ace/theme-kr_theme.js \
	$(srcdir)/res/ace/theme-merbivore.js \
	$(srcdir)/res/ace/theme-merbivore_soft.js \
	$(srcdir)/res/ace/theme-mono_industrial.js \
	$(srcdir)/res/ace/theme-monokai.js \
	$(srcdir)/res/ace/theme-pastel_on_dark.js \
	$(srcdir)/res/ace/theme-twilight.js \
	$(srcdir)/res/ace/theme-vibrant_ink.js \
	$(srcdir)/res/ace/themes-list.js \
	$(srcdir)/res/ace/worker-coffee.js \
	$(srcdir)/res/ace/worker-css.js \
	$(srcdir)/res/ace/worker-javascript.js \
	$(NULL)

libs::
	$(INSTALL) $(_FILES) $(DIST)/bin/res
	mkdir -p $(DIST)/bin/res/ace
	$(INSTALL) $(_ACE_RESOURCE_FILES) $(DIST)/bin/res/ace

install::
	$(SYSINSTALL) $(IFLAGS1) $(_FILES) $(DESTDIR)$(mozappdir)/res
	mkdir -p $(DESTDIR)$(mozappdir)/res/resources/ace
	$(INSTALL) $(_ACE_RESOURCE_FILES) $(DESTDIR)$(mozappdir)/res/resources/ace

include $(topsrcdir)/config/rules.mk

