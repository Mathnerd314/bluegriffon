DEPTH    = ../..
topsrcdir  = @top_srcdir@
srcdir  = @srcdir@
VPATH    = @srcdir@

include $(DEPTH)/config/autoconf.mk

APP_VERSION = $(shell cat $(srcdir)/../config/version.txt)
CODE_NAME = $(shell cat $(srcdir)/../config/codename.txt)

DEFINES += \
	-DAPP_NAME=$(MOZ_APP_DISPLAYNAME) \
	-DAPP_VERSION=$(APP_VERSION) \
	-DCODE_NAME=$(CODE_NAME) \
	$(NULL)

ifneq (,$(filter mac cocoa, $(MOZ_WIDGET_TOOLKIT)))
DEFINES += -DTOOLBAR_CUSTOMIZATION_SHEET
endif

_FILES = \
	$(srcdir)/res/BespinEmbedded.css \
	$(srcdir)/res/BespinEmbedded.js \
	$(srcdir)/res/BespinMain.js \
	$(srcdir)/res/BespinWorker.js \
	$(srcdir)/res/bespin.html \
	$(srcdir)/res/html_transitional.html \
	$(srcdir)/res/html_strict.html \
	$(srcdir)/res/xhtml_transitional.xhtml \
	$(srcdir)/res/xhtml_strict.xhtml \
	$(srcdir)/res/html5.html \
	$(srcdir)/res/xhtml5.xhtml \
	$(srcdir)/res/rotatorCenterBG.png \
	$(srcdir)/res/rotate_icon.png \
	$(srcdir)/res/reset-fonts-grids.css \
	$(srcdir)/res/base-min.css \
	$(srcdir)/res/EditorContent.css \
	$(srcdir)/res/EditorOverride.css \
	$(NULL)

_BESPIN_RESOURCE_FILES = \
	$(srcdir)/res/resources/screen_theme/theme.less \
	$(NULL)

_BESPIN_WHITETHEME_FILES = \
	$(srcdir)/res/resources/whitetheme/theme.less \
	$(NULL)

_BESPIN_IMAGE_FILES = \
  $(srcdir)/res/resources/screen_theme/images/bespin-s.png \
	$(srcdir)/res/resources/screen_theme/images/check-selected.png \
	$(srcdir)/res/resources/screen_theme/images/check-unselected.png \
	$(srcdir)/res/resources/screen_theme/images/lines.png \
	$(srcdir)/res/resources/screen_theme/images/radio-selected.png \
	$(srcdir)/res/resources/screen_theme/images/radio-unselected.png \
	$(srcdir)/res/resources/screen_theme/images/scroll-down.png \
	$(srcdir)/res/resources/screen_theme/images/scroll-left.png \
	$(srcdir)/res/resources/screen_theme/images/scroll-right.png \
	$(srcdir)/res/resources/screen_theme/images/scroll-up.png \
	$(NULL)

libs::
	$(INSTALL) $(_FILES) $(DIST)/bin/res
	mkdir -p $(DIST)/bin/res/resources/screen_theme/images/
	$(INSTALL) $(_BESPIN_RESOURCE_FILES) $(DIST)/bin/res/resources/screen_theme
	$(INSTALL) $(_BESPIN_IMAGE_FILES) $(DIST)/bin/res/resources/screen_theme/images
	$(INSTALL) $(_BESPIN_WHITETHEME_FILES) $(DIST)/bin/res/resources/whitetheme

install::
	$(SYSINSTALL) $(IFLAGS1) $(_FILES) $(DESTDIR)$(mozappdir)/res
	mkdir -p $(DESTDIR)$(mozappdir)/res/resources/screen_theme/images/
	$(INSTALL) $(_BESPIN_RESOURCE_FILES) $(DESTDIR)$(mozappdir)/res/resources/screen_theme
	$(INSTALL) $(_BESPIN_IMAGE_FILES) $(DESTDIR)$(mozappdir)/res/resources/screen_theme/images
	$(INSTALL) $(_BESPIN_WHITETHEME_FILES) $(DESTDIR)$(mozappdir)/res/resources/whitetheme

include $(topsrcdir)/config/rules.mk

